{
  "manifest_version": 2,
  "name": "Spam Guard",
  "version": "1.0.0",
  "description": "Intelligent spam detection using header analysis and ML classification",
  "author": "Your Name",
  "applications": {
    "gecko": {
      "id": "spam-guard@example.com",
      "strict_min_version": "78.0"
    }
  },
  "permissions": [
    "messagesRead",
    "messagesMove",
    "accountsRead",
    "storage",
    "notifications"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "options_ui": {
    "page": "options/options.html",
    "browser_style": true
  },
  "browser_action": {
    "default_title": "IMSS Spam Detector",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png"
    },
    "default_popup": "popup/popup.html"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  }
}
